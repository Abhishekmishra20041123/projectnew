<% layout("layouts/boilerplate") %>

    <div class="container my-5">
        <!-- Enhanced Header -->
        <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom">
            <div>
                <h1 class="fw-bold text-dark mb-2">Welcome back, <%= currUser.username %>!</h1>
                <p class="text-muted mb-0 fs-6">Manage your bookings and discover new places to stay</p>
            </div>
            <div class="btn-group shadow-sm">
                <a href="/profile/dashboard/host?type=host" class="btn btn-outline-primary btn-lg rounded-start-3">
                    <i class="bi bi-house-door me-2"></i>Host View
                </a>
                <a href="/listings" class="btn btn-primary btn-lg rounded-end-3">
                    <i class="bi bi-search me-2"></i>Browse Listings
                </a>
            </div>
        </div>

        <!-- Enhanced Statistics Cards -->
        <div class="row g-4 mb-5">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-primary text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">
                                    <%= stats.totalBookings %>
                                </div>
                                <div class="fs-6 opacity-90">Total Bookings</div>
                                <small class="opacity-75">All time bookings</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-calendar3 fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-warning text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">
                                    <%= stats.upcomingBookings %>
                                </div>
                                <div class="fs-6 opacity-90">Upcoming Trips</div>
                                <small class="opacity-75">Ready for adventure</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-airplane fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-success text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">
                                    <%= stats.completedBookings %>
                                </div>
                                <div class="fs-6 opacity-90">Completed Trips</div>
                                <small class="opacity-75">Amazing memories</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-check-circle fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-danger text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">
                                    <%= stats.wishlistItems %>
                                </div>
                                <div class="fs-6 opacity-90">Wishlist Items</div>
                                <small class="opacity-75">Places you love</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-heart fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Enhanced Recent Bookings -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-transparent border-0 p-4 pb-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1 fw-bold">Your Recent Bookings</h5>
                                <small class="text-muted">Track and manage your reservations</small>
                            </div>
                            <a href="/bookings/my-bookings" class="btn btn-outline-primary rounded-3">
                                <i class="bi bi-arrow-right me-1"></i>View All
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <% if(bookings.length===0) { %>
                            <div class="text-center py-5">
                                <div class="bg-light rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center"
                                    style="width: 100px; height: 100px;">
                                    <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <h6 class="fw-bold text-dark mb-2">No bookings yet</h6>
                                <p class="text-muted mb-4">Start your journey by exploring amazing places</p>
                                <a href="/listings" class="btn btn-primary btn-lg rounded-3">
                                    <i class="bi bi-search me-2"></i>Discover Places
                                </a>
                            </div>
                            <% } else { %>
                                <div class="row g-3">
                                    <% bookings.slice(0, 6).forEach(booking=> { %>
                                        <div class="col-12">
                                            <div class="card border rounded-3 hover-shadow">
                                                <div class="card-body p-3">
                                                    <div class="row align-items-center g-3">
                                                        <div class="col-md-3">
                                                            <div class="d-flex align-items-center">
                                                                <div class="position-relative">
                                                                    <% if (booking.listing && booking.listing.image &&
                                                                        booking.listing.image.url) { %>
                                                                        <img src="<%= booking.listing.image.url %>"
                                                                            class="rounded-3 shadow-sm" width="70"
                                                                            height="70" style="object-fit: cover;"
                                                                            alt="Property">
                                                                        <% } else { %>
                                                                            <div class="bg-light rounded-3 shadow-sm d-flex align-items-center justify-content-center"
                                                                                style="width: 70px; height: 70px;">
                                                                                <i
                                                                                    class="bi bi-house text-muted fs-4"></i>
                                                                            </div>
                                                                            <% } %>
                                                                                <span
                                                                                    class="position-absolute top-0 start-0 badge bg-<%= booking.status === 'confirmed' ? 'success' : 
                                                                                     booking.status === 'pending' ? 'warning' : 
                                                                                     booking.status === 'cancelled' ? 'danger' : 'secondary' %> rounded-pill m-1">
                                                                                    <i
                                                                                        class="bi bi-<%= booking.status === 'confirmed' ? 'check' : 
                                                                                   booking.status === 'pending' ? 'clock' : 
                                                                                   booking.status === 'cancelled' ? 'x' : 'circle' %>"></i>
                                                                                </span>
                                                                </div>
                                                                <div class="ms-3">
                                                                    <% if (booking.listing) { %>
                                                                        <h6 class="mb-1 fw-semibold">
                                                                            <%= booking.listing.title ?
                                                                                booking.listing.title.substring(0, 30)
                                                                                : 'Untitled Listing' %>...
                                                                        </h6>
                                                                        <small class="text-muted">
                                                                            <i class="bi bi-geo-alt me-1"></i>
                                                                            <%= booking.listing.location
                                                                                || 'Location not available' %>
                                                                        </small>
                                                                        <% } else { %>
                                                                            <h6 class="mb-1 fw-semibold">Listing no
                                                                                longer available</h6>
                                                                            <small class="text-muted">
                                                                                <i class="bi bi-geo-alt me-1"></i>Not
                                                                                available
                                                                            </small>
                                                                            <% } %>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-2">
                                                            <div class="text-center">
                                                                <div
                                                                    class="d-flex align-items-center justify-content-center">
                                                                    <% if(booking.host.profile &&
                                                                        booking.host.profile.profilePicture) { %>
                                                                        <img src="<%= booking.host.profile.profilePicture.url %>"
                                                                            class="rounded-circle me-2 shadow-sm"
                                                                            width="35" height="35" alt="Host">
                                                                        <% } else { %>
                                                                            <div class="bg-primary rounded-circle me-2 d-flex align-items-center justify-content-center shadow-sm"
                                                                                style="width: 35px; height: 35px;">
                                                                                <i class="bi bi-person text-white"></i>
                                                                            </div>
                                                                            <% } %>
                                                                                <div>
                                                                                    <small class="fw-semibold d-block">
                                                                                        <%= booking.host.username %>
                                                                                    </small>
                                                                                    <small
                                                                                        class="text-muted">Host</small>
                                                                                </div>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-3">
                                                            <div class="text-center">
                                                                <div
                                                                    class="d-flex align-items-center justify-content-center mb-1">
                                                                    <i class="bi bi-calendar3 text-primary me-2"></i>
                                                                    <small class="fw-semibold">
                                                                        <%= new
                                                                            Date(booking.checkIn).toLocaleDateString('en-US',
                                                                            {month: 'short' , day: 'numeric' }) %> -
                                                                            <%= new
                                                                                Date(booking.checkOut).toLocaleDateString('en-US',
                                                                                {month: 'short' , day: 'numeric' }) %>
                                                                    </small>
                                                                </div>
                                                                <small class="text-muted">
                                                                    <%= booking.nights %> nights
                                                                </small>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-2">
                                                            <div class="text-center">
                                                                <div class="fw-bold text-success fs-6">₹<%=
                                                                        booking.totalPrice %>
                                                                </div>
                                                                <small class="text-muted">Total</small>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-2">
                                                            <div class="text-end">
                                                                <a href="/bookings/<%= booking._id %>/confirmation"
                                                                    class="btn btn-primary btn-sm rounded-3">
                                                                    <i class="bi bi-eye me-1"></i>Details
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>

            <!-- Enhanced Sidebar -->
            <div class="col-lg-4">
                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-header bg-transparent border-0 p-4 pb-0">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-2 me-3">
                                <i class="bi bi-lightning text-primary fs-5"></i>
                            </div>
                            <h6 class="mb-0 fw-bold">Quick Actions</h6>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-grid gap-3">
                            <a href="/listings"
                                class="btn btn-primary btn-lg rounded-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-search me-2"></i>Browse New Listings
                            </a>
                            <div class="row g-2">
                                <div class="col-6">
                                    <a href="/wishlist" class="btn btn-outline-danger w-100 rounded-3">
                                        <i class="bi bi-heart me-1"></i>Wishlist
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="/profile/<%= currUser._id %>"
                                        class="btn btn-outline-secondary w-100 rounded-3">
                                        <i class="bi bi-person me-1"></i>Profile
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Enhanced Wishlist -->
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-transparent border-0 p-4 pb-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="bg-danger bg-opacity-10 rounded-3 p-2 me-3">
                                    <i class="bi bi-heart text-danger fs-5"></i>
                                </div>
                                <h6 class="mb-0 fw-bold">Your Wishlist</h6>
                            </div>
                            <% if(wishlist.length> 3) { %>
                                <a href="/wishlist" class="btn btn-outline-primary btn-sm rounded-3">
                                    <i class="bi bi-arrow-right me-1"></i>View All
                                </a>
                                <% } %>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <% if(wishlist.length===0) { %>
                            <div class="text-center py-4">
                                <div class="bg-light rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center"
                                    style="width: 80px; height: 80px;">
                                    <i class="bi bi-heart text-muted fs-2"></i>
                                </div>
                                <h6 class="fw-semibold mb-2">No saved listings</h6>
                                <p class="text-muted mb-3 small">Save places you love for later</p>
                                <a href="/listings" class="btn btn-primary rounded-3">
                                    <i class="bi bi-search me-2"></i>Start Exploring
                                </a>
                            </div>
                            <% } else { %>
                                <div class="d-grid gap-3">
                                    <% wishlist.slice(0, 4).forEach(listing=> { %>
                                        <div class="card border rounded-3 hover-shadow">
                                            <div class="card-body p-3">
                                                <div class="d-flex align-items-start">
                                                    <div class="position-relative">
                                                        <% if (listing.image && listing.image.url) { %>
                                                            <img src="<%= listing.image.url %>"
                                                                class="rounded-3 shadow-sm" width="70" height="70"
                                                                style="object-fit: cover;" alt="<%= listing.title %>">
                                                            <% } else { %>
                                                                <div class="bg-light rounded-3 shadow-sm d-flex align-items-center justify-content-center"
                                                                    style="width: 70px; height: 70px;">
                                                                    <i class="bi bi-house text-muted fs-4"></i>
                                                                </div>
                                                                <% } %>
                                                                    <div class="position-absolute top-0 end-0 m-1">
                                                                        <span class="badge bg-white text-danger border">
                                                                            <i class="bi bi-heart-fill"></i>
                                                                        </span>
                                                                    </div>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <h6 class="mb-1 fw-semibold">
                                                            <% if (listing.title) { %>
                                                                <%= listing.title.substring(0, 25) %>...
                                                                    <% } else { %>
                                                                        Untitled Listing
                                                                        <% } %>
                                                        </h6>
                                                        <div class="d-flex align-items-center mb-2">
                                                            <i class="bi bi-geo-alt text-primary me-1 small"></i>
                                                            <small class="text-muted">
                                                                <%= listing.location || 'Location not available' %>
                                                            </small>
                                                        </div>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div class="fw-bold text-success">₹<%= listing.price || 0 %>
                                                                    <small class="text-muted">/night</small></div>
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="/listings/<%= listing._id %>"
                                                                    class="btn btn-outline-primary btn-sm rounded-start-2">
                                                                    <i class="bi bi-eye"></i>
                                                                </a>
                                                                <form method="POST"
                                                                    action="/wishlist/remove/<%= listing._id %>?_method=DELETE"
                                                                    class="d-inline">
                                                                    <button
                                                                        class="btn btn-outline-danger btn-sm rounded-end-2"
                                                                        type="submit" title="Remove from wishlist">
                                                                        <i class="bi bi-heart-fill"></i>
                                                                    </button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <style>
        /* Enhanced gradient backgrounds */
        .bg-gradient-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .bg-gradient-warning {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
        }

        .bg-gradient-success {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
        }

        .bg-gradient-danger {
            background: linear-gradient(135deg, #dc3545 0%, #bd2130 100%);
        }

        /* Hover effects */
        .hover-shadow {
            transition: all 0.3s ease;
        }

        .hover-shadow:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

        /* Card animations */
        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-1px);
        }

        /* Button enhancements */
        .btn {
            transition: all 0.2s ease;
            font-weight: 500;
        }

        .btn:hover {
            transform: translateY(-1px);
        }

        .btn-group .btn:hover {
            transform: translateY(-2px);
            z-index: 2;
        }

        /* Statistics cards animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: fadeInUp 0.6s ease forwards;
        }

        .card:nth-child(2) {
            animation-delay: 0.1s;
        }

        .card:nth-child(3) {
            animation-delay: 0.2s;
        }

        .card:nth-child(4) {
            animation-delay: 0.3s;
        }

        /* Enhanced spacing and typography */
        .display-4 {
            font-weight: 700;
            line-height: 1.1;
        }

        /* Responsive improvements */
        @media (max-width: 768px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }

            .btn-group {
                flex-direction: column;
                width: 100%;
            }

            .btn-group .btn {
                border-radius: 0.5rem !important;
                margin-bottom: 0.5rem;
            }

            .display-4 {
                font-size: 2.5rem;
            }
        }

        /* Loading states */
        .card-body:empty {
            min-height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Badge improvements */
        .badge {
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        /* Enhanced borders */
        .border-bottom {
            border-color: rgba(0, 0, 0, 0.1) !important;
        }
    </style>
<% layout("/layouts/boilerplate") %>
<script>
    const mapToken = '<%= process.env.MAP_TOKEN%>';
    const listing = <%- JSON.stringify(listdata) %>;
</script>
    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h3>
                    <%= listdata.title %>
                </h3>
            </div>
            <div class="card col-6 offset-2 listing-card">
                <img src="<%= listdata.image.url %>" class="card-img-top show-img" alt="Listing image">
                <div class="card-body">
                    <p class="card-text">
                        <b>Owner:</b>
                        <%= listdata.owner.username %>
                            <br>
                            <b>description:</b>
                            <%= listdata.description %>
                                <br>
                                <b>Price:</b>&#8377; <%= listdata.price.toLocaleString("en-IN") %>
                                    <br>
                                    <b>Location:</b>
                                    <%= listdata.location %>
                                        <br>
                                        <b>Country:</b>
                                        <%= listdata.country %>
                    </p>
                </div>
            </div>
            <br>
            <% if(currUser && currUser._id.equals(listdata.owner._id)){%>
                <div class="btns offset-2">
                    <form action="/listings/<%= listdata._id %>/edit" method="get">
                        <button class="btn btn-dark offset-2 add-button"
                            style="padding-left: 20px; padding-right: 20px;">
                            Edit </button>
                    </form>
                    <!-- <a href="/listings/<%= listdata._id %>/edit">edit list</a> -->
                    <br><br>
                    <form action="/listings/<%= listdata._id %>?_method=delete" method="post">
                        <button class="btn btn-dark offset-6">delete</button>
                    </form>
                </div>
                <% } %>

                    <div class="col-8 offset-2">
                        <% if(currUser){%>
                            <h4>Leave a review:</h4>
                            <form action="/listings/<%=listdata._id%>/reviews" method="post" novalidate
                                class="needs-validation">
                                
                                <div class="mb-3 mt-3">
                                    <label for="rating" class="form-label">Rating</label>
                                <fieldset class="starability-slot">
                                    
                                    
                                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                        checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                                </div>
                                <div class="mb-3 mt-3">
                                    <label for="comment" class="form-label">Comment</label>
                                    <textarea name="review[comment]" id="comment" cols="30" rows="5"
                                        class="form-control" required>Add comment:</textarea>
                                    <div class="invalid-feedback">please enter a feedback</div>
                                </div>
                                <button class="btn btn-dark add-button">Submit</button>
                            </form>
                            <% } %>
                                <br><br>
                                <hr>
                            <% if(listdata.reviews.length>0){ %>
                                <div class="row">
                                    <p><b>All reviews</b></p>
                                    <% for(review of listdata.reviews) {%>
                                        <div class="card col-5 ms-3 mb-3">
                                            <div class="card-body">
                                                <div class="card-title">@<%= review.author.username %>
                                                </div>
                                                <p class="starability-result card-text" data-rating="<%= review.rating %>">
                                                    
                                                </p>
                                                <div class="card-text">
                                                    <%= review.comment %>
                                                </div>
                                                <form
                                                    action="/listings/<%= listdata._id %>/reviews/<%= review._id %>?_method=delete"
                                                    method="post">
                                                    <button class="btn btn-dark ms mb-2">delete</button>
                                                </form>
                                            </div>
                                        </div>
                                        <% } %>
                                </div>
                                <% } %>
                               
                    </div>
                     <div class="col-6 offset-2 mb-3">
                                    <h3>Where you will be</h3>
                                    <div id="map"></div>
                    </div>
                    
        </div>
        <script src="/js/map.js"></script>
    </body>

    
<% layout("layouts/boilerplate") %>

    <div class="container my-5">
        <!-- Enhanced Header -->
        <div class="d-flex justify-content-between align-items-center mb-5 pb-3 border-bottom">
            <div>
                <h1 class="fw-bold text-dark mb-2">Host Dashboard</h1>
                <p class="text-muted mb-0 fs-6">Manage your properties and guest bookings</p>
            </div>
            <div class="btn-group shadow-sm">
                <a href="/profile/dashboard/guest?type=guest" class="btn btn-outline-primary btn-lg rounded-start-3">
                    <i class="bi bi-person me-2"></i>Guest View
                </a>
                <a href="/listings/new" class="btn btn-primary btn-lg rounded-end-3">
                    <i class="bi bi-plus me-2"></i>Add Listing
                </a>
            </div>
        </div>

        <!-- Enhanced Statistics Cards -->
        <div class="row g-4 mb-5">
            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-primary text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">
                                    <%= stats.totalListings %>
                                </div>
                                <div class="fs-6 opacity-90">Total Properties</div>
                                <small class="opacity-75">Active listings</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-house fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-info text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">
                                    <%= stats.totalBookings %>
                                </div>
                                <div class="fs-6 opacity-90">Total Bookings</div>
                                <small class="opacity-75">All time reservations</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-calendar3 fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-warning text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">
                                    <%= stats.pendingBookings %>
                                </div>
                                <div class="fs-6 opacity-90">Pending Requests</div>
                                <small class="opacity-75">Needs your attention</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-clock fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <% if(stats.pendingBookings> 0) { %>
                        <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-50 animate-pulse">
                        </div>
                        <% } else { %>
                            <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                            <% } %>
                </div>
            </div>

            <div class="col-lg-3 col-md-6">
                <div class="card border-0 shadow-sm rounded-4 overflow-hidden h-100 position-relative">
                    <div class="card-body p-4 bg-gradient-success text-white">
                        <div class="d-flex justify-content-between align-items-start">
                            <div>
                                <div class="display-4 fw-bold mb-1">$<%= stats.totalRevenue %>
                                </div>
                                <div class="fs-6 opacity-90">Total Revenue</div>
                                <small class="opacity-75">Lifetime earnings</small>
                            </div>
                            <div class="bg-white bg-opacity-20 rounded-3 p-3">
                                <i class="bi bi-currency-dollar fs-2"></i>
                            </div>
                        </div>
                    </div>
                    <div class="position-absolute bottom-0 start-0 w-100 h-2 bg-white bg-opacity-30"></div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Enhanced Recent Bookings -->
            <div class="col-lg-8">
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-transparent border-0 p-4 pb-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1 fw-bold">Recent Booking Requests</h5>
                                <small class="text-muted">Manage and respond to guest requests</small>
                            </div>
                            <div class="d-flex gap-2">
                                <% if(stats.pendingBookings> 0) { %>
                                    <span class="badge bg-warning rounded-pill">
                                        <%= stats.pendingBookings %> pending
                                    </span>
                                    <% } %>
                                        <a href="/bookings/host-bookings" class="btn btn-outline-primary rounded-3">
                                            <i class="bi bi-arrow-right me-1"></i>View All
                                        </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <% if(bookings.length===0) { %>
                            <div class="text-center py-5">
                                <div class="bg-light rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center"
                                    style="width: 100px; height: 100px;">
                                    <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                                </div>
                                <h6 class="fw-bold text-dark mb-2">No booking requests yet</h6>
                                <p class="text-muted mb-4">When guests book your properties, they'll appear here</p>
                                <a href="/listings/new" class="btn btn-primary btn-lg rounded-3">
                                    <i class="bi bi-plus me-2"></i>Create Your First Listing
                                </a>
                            </div>
                            <% } else { %>
                                <div class="row g-3">
                                    <% bookings.slice(0, 6).forEach(booking=> { %>
                                        <div class="col-12">
                                            <div class="card border rounded-3 hover-shadow booking-container"
                                                data-booking-id="<%= booking._id %>">
                                                <div class="card-body p-3">
                                                    <div class="row align-items-center g-3">
                                                        <div class="col-md-3">
                                                            <div class="d-flex align-items-center">
                                                                <div class="position-relative">
                                                                    <% if(booking.guest.profile &&
                                                                        booking.guest.profile.profilePicture) { %>
                                                                        <img src="<%= booking.guest.profile.profilePicture.url %>"
                                                                            class="rounded-circle shadow-sm" width="50"
                                                                            height="50" alt="Guest">
                                                                        <% } else { %>
                                                                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center shadow-sm"
                                                                                style="width: 50px; height: 50px;">
                                                                                <i
                                                                                    class="bi bi-person text-white fs-5"></i>
                                                                            </div>
                                                                            <% } %>
                                                                                <% if(booking.status==='pending' ) { %>
                                                                                    <span
                                                                                        class="position-absolute top-0 end-0 badge bg-warning rounded-pill">
                                                                                        <i
                                                                                            class="bi bi-exclamation"></i>
                                                                                    </span>
                                                                                    <% } %>
                                                                </div>
                                                                <div class="ms-3">
                                                                    <h6 class="mb-1 fw-semibold">
                                                                        <%= booking.guest.username %>
                                                                    </h6>
                                                                    <small class="text-muted">Guest request</small>
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-3">
                                                            <div>
                                                                <h6 class="mb-1 fw-semibold">
                                                                    <% if (booking.listing && booking.listing.title) {
                                                                        %>
                                                                        <%= booking.listing.title.substring(0, 25) %>...
                                                                            <% } else { %>
                                                                                Listing no longer available
                                                                                <% } %>
                                                                </h6>
                                                                <small class="text-muted">
                                                                    <i class="bi bi-house me-1"></i>Your property
                                                                </small>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-2">
                                                            <div class="text-center">
                                                                <div
                                                                    class="d-flex align-items-center justify-content-center mb-1">
                                                                    <i class="bi bi-calendar3 text-primary me-2"></i>
                                                                    <small class="fw-semibold">
                                                                        <%= new
                                                                            Date(booking.checkIn).toLocaleDateString('en-US',
                                                                            {month: 'short' , day: 'numeric' }) %> -
                                                                            <%= new
                                                                                Date(booking.checkOut).toLocaleDateString('en-US',
                                                                                {month: 'short' , day: 'numeric' }) %>
                                                                    </small>
                                                                </div>
                                                                <small class="text-muted">
                                                                    <%= booking.nights %> nights
                                                                </small>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-2">
                                                            <div class="text-center">
                                                                <div class="fw-bold text-success fs-6">$<%=
                                                                        booking.totalPrice %>
                                                                </div>
                                                                <small class="text-muted">Total</small>
                                                            </div>
                                                        </div>

                                                        <div class="col-md-2">
                                                            <div class="text-end">
                                                                <div class="d-flex flex-column gap-2 align-items-end">
                                                                    <span
                                                                        class="badge bg-<%= booking.status === 'confirmed' ? 'success' : 
                                                                                     booking.status === 'pending' ? 'warning booking-status-pending' : 
                                                                                     booking.status === 'cancelled' ? 'danger' : 'secondary' %> rounded-pill">
                                                                        <i
                                                                            class="bi bi-<%= booking.status === 'confirmed' ? 'check-circle' : 
                                                                                   booking.status === 'pending' ? 'clock' : 
                                                                                   booking.status === 'cancelled' ? 'x-circle' : 'circle' %> me-1"></i>
                                                                        <%= booking.status.charAt(0).toUpperCase() +
                                                                            booking.status.slice(1) %>
                                                                    </span>
                                                                    <a href="/bookings/<%= booking._id %>/confirmation"
                                                                        class="btn btn-<%= booking.status === 'pending' ? 'primary' : 'outline-primary' %> btn-sm rounded-3">
                                                                        <i
                                                                            class="bi bi-<%= booking.status === 'pending' ? 'lightning' : 'eye' %> me-1"></i>
                                                                        <%= booking.status==='pending' ? 'View Details'
                                                                            : 'Details' %>
                                                                    </a>
                                                                    <% if (booking.status==='pending' ) { %>
                                                                        <a href="/bookings/<%= booking._id %>/respond"
                                                                            class="btn btn-success btn-sm rounded-3 ms-2">
                                                                            <i class="bi bi-chat-dots me-1"></i>
                                                                            Respond
                                                                        </a>
                                                                        <% } %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>

            <!-- Enhanced Sidebar -->
            <div class="col-lg-4">
                <!-- Quick Actions -->
                <div class="card border-0 shadow-sm rounded-4 mb-4">
                    <div class="card-header bg-transparent border-0 p-4 pb-0">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 rounded-3 p-2 me-3">
                                <i class="bi bi-lightning text-primary fs-5"></i>
                            </div>
                            <h6 class="mb-0 fw-bold">Host Tools</h6>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-grid gap-3">
                            <a href="/listings/new"
                                class="btn btn-primary btn-lg rounded-3 d-flex align-items-center justify-content-center">
                                <i class="bi bi-plus me-2"></i>Create New Listing
                            </a>
                            <div class="row g-2">
                                <div class="col-6">
                                    <a href="/bookings/host-bookings" class="btn btn-outline-primary w-100 rounded-3">
                                        <i class="bi bi-calendar3 me-1"></i>Bookings
                                    </a>
                                </div>
                                <div class="col-6">
                                    <a href="/profile/<%= currUser._id %>"
                                        class="btn btn-outline-secondary w-100 rounded-3">
                                        <i class="bi bi-person me-1"></i>Profile
                                    </a>
                                </div>
                            </div>
                            <!-- Analytics and Settings buttons removed -->
                        </div>
                    </div>
                </div>

                <!-- Enhanced Listings -->
                <div class="card border-0 shadow-sm rounded-4">
                    <div class="card-header bg-transparent border-0 p-4 pb-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 rounded-3 p-2 me-3">
                                    <i class="bi bi-house text-success fs-5"></i>
                                </div>
                                <h6 class="mb-0 fw-bold">Your Properties</h6>
                            </div>
                            <% if(listings.length> 3) { %>
                                <a href="/listings?host=<%= currUser._id %>"
                                    class="btn btn-outline-primary btn-sm rounded-3">
                                    <i class="bi bi-arrow-right me-1"></i>View All
                                </a>
                                <% } %>
                        </div>
                    </div>
                    <div class="card-body p-4">
                        <% if(listings.length===0) { %>
                            <div class="text-center py-4">
                                <div class="bg-light rounded-circle mx-auto mb-3 d-flex align-items-center justify-content-center"
                                    style="width: 80px; height: 80px;">
                                    <i class="bi bi-house text-muted fs-2"></i>
                                </div>
                                <h6 class="fw-semibold mb-2">No properties listed</h6>
                                <p class="text-muted mb-3 small">Start earning by listing your first property</p>
                                <a href="/listings/new" class="btn btn-primary rounded-3">
                                    <i class="bi bi-plus me-2"></i>Create First Listing
                                </a>
                            </div>
                            <% } else { %>
                                <div class="d-grid gap-3">
                                    <% listings.slice(0, 4).forEach(listing=> { %>
                                        <div class="card border rounded-3 hover-shadow">
                                            <div class="card-body p-3">
                                                <div class="d-flex align-items-start">
                                                    <div class="position-relative">
                                                        <% if (listing.image && listing.image.url) { %>
                                                            <img src="<%= listing.image.url %>"
                                                                class="rounded-3 shadow-sm" width="70" height="70"
                                                                style="object-fit: cover;" alt="<%= listing.title %>">
                                                            <% } else { %>
                                                                <div class="bg-light rounded-3 shadow-sm d-flex align-items-center justify-content-center"
                                                                    style="width: 70px; height: 70px;">
                                                                    <i class="bi bi-house text-muted fs-4"></i>
                                                                </div>
                                                                <% } %>
                                                                    <div class="position-absolute top-0 end-0 m-1">
                                                                        <span
                                                                            class="badge bg-white text-success border">
                                                                            <i class="bi bi-house-check"></i>
                                                                        </span>
                                                                    </div>
                                                    </div>
                                                    <div class="flex-grow-1 ms-3">
                                                        <h6 class="mb-1 fw-semibold">
                                                            <% if (listing.title) { %>
                                                                <%= listing.title.substring(0, 25) %>...
                                                                    <% } else { %>
                                                                        Untitled Listing
                                                                        <% } %>
                                                        </h6>
                                                        <div class="d-flex align-items-center mb-2">
                                                            <i class="bi bi-geo-alt text-primary me-1 small"></i>
                                                            <small class="text-muted">
                                                                <%= listing.location || 'Location not available' %>
                                                            </small>
                                                        </div>
                                                        <div class="d-flex justify-content-between align-items-center">
                                                            <div>
                                                                <div class="fw-bold text-success">$<%= listing.price ||
                                                                        0 %>
                                                                        <small class="text-muted">/night</small></div>
                                                                <small class="text-muted">
                                                                    <i class="bi bi-star-fill text-warning me-1"></i>4.8
                                                                    • 24 reviews
                                                                </small>
                                                            </div>
                                                            <div class="btn-group btn-group-sm">
                                                                <a href="/listings/<%= listing._id %>"
                                                                    class="btn btn-outline-primary btn-sm rounded-start-2"
                                                                    title="View listing">
                                                                    <i class="bi bi-eye"></i>
                                                                </a>
                                                                <a href="/listings/<%= listing._id %>/edit"
                                                                    class="btn btn-outline-secondary btn-sm rounded-end-2"
                                                                    title="Edit listing">
                                                                    <i class="bi bi-pencil"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                                <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Performance Insights Section -->
        <% if(listings.length> 0) { %>
            <div class="row mt-5">
                <div class="col-12">
                    <div class="card border-0 shadow-sm rounded-4">
                        <div class="card-header bg-transparent border-0 p-4 pb-0">
                            <div class="d-flex align-items-center">
                                <div class="bg-info bg-opacity-10 rounded-3 p-2 me-3">
                                    <i class="bi bi-graph-up text-info fs-5"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1 fw-bold">Performance Insights</h6>
                                    <small class="text-muted">Track your hosting performance</small>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-4">
                            <div class="row g-4">
                                <div class="col-md-3">
                                    <div class="text-center p-3 bg-light rounded-3">
                                        <i class="bi bi-eye text-primary fs-3 mb-2"></i>
                                        <div class="fw-bold fs-4">2.4k</div>
                                        <small class="text-muted">Profile Views</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center p-3 bg-light rounded-3">
                                        <i class="bi bi-heart text-danger fs-3 mb-2"></i>
                                        <div class="fw-bold fs-4">89</div>
                                        <small class="text-muted">Favorites</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center p-3 bg-light rounded-3">
                                        <i class="bi bi-chat text-success fs-3 mb-2"></i>
                                        <div class="fw-bold fs-4">4.9</div>
                                        <small class="text-muted">Avg Rating</small>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="text-center p-3 bg-light rounded-3">
                                        <i class="bi bi-calendar-check text-warning fs-3 mb-2"></i>
                                        <div class="fw-bold fs-4">76%</div>
                                        <small class="text-muted">Occupancy Rate</small>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>

    <style>
        /* Enhanced gradient backgrounds */
        .bg-gradient-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .bg-gradient-info {
            background: linear-gradient(135deg, #17a2b8 0%, #117a8b 100%);
        }

        .bg-gradient-warning {
            background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
        }

        .bg-gradient-success {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
        }

        /* Hover effects */
        .hover-shadow {
            transition: all 0.3s ease;
        }

        .hover-shadow:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15) !important;
        }

        /* Card animations */
        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-1px);
        }

        /* Button enhancements */
        .btn {
            transition: all 0.2s ease;
            font-weight: 500;
        }

        .btn:hover {
            transform: translateY(-1px);
        }

        .btn-group .btn:hover {
            transform: translateY(-2px);
            z-index: 2;
        }

        /* Statistics cards animation */
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .card {
            animation: fadeInUp 0.6s ease forwards;
        }

        .card:nth-child(2) {
            animation-delay: 0.1s;
        }

        .card:nth-child(3) {
            animation-delay: 0.2s;
        }

        .card:nth-child(4) {
            animation-delay: 0.3s;
        }

        /* Pulse animation for pending items */
        @keyframes pulse {

            0%,
            100% {
                opacity: 1;
            }

            50% {
                opacity: 0.5;
            }
        }

        .animate-pulse {
            animation: pulse 2s infinite;
        }

        /* Enhanced spacing and typography */
        .display-4 {
            font-weight: 700;
            line-height: 1.1;
        }

        /* Responsive improvements */
        @media (max-width: 768px) {
            .container {
                padding-left: 15px;
                padding-right: 15px;
            }

            .btn-group {
                flex-direction: column;
                width: 100%;
            }

            .btn-group .btn {
                border-radius: 0.5rem !important;
                margin-bottom: 0.5rem;
            }

            .display-4 {
                font-size: 2.5rem;
            }
        }

        /* Loading states */
        .card-body:empty {
            min-height: 200px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Badge improvements */
        .badge {
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        /* Enhanced borders */
        .border-bottom {
            border-color: rgba(0, 0, 0, 0.1) !important;
        }

        /* Performance insights hover effects */
        .bg-light:hover {
            background-color: #f8f9fa !important;
            transform: translateY(-2px);
            transition: all 0.2s ease;
        }
    </style>

    <!-- Include booking response helper -->
    <script src="/js/booking-response-helper.js"></script>

    <script>
        // Fix for Respond buttons
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Dashboard script loaded - fixing respond buttons');

            // Get all respond buttons (both regular and any buttons added dynamically)
            document.querySelectorAll('a[href*="/bookings/"][href*="/respond"]').forEach(function (button) {
                button.onclick = function (e) {
                    e.preventDefault();
                    var href = this.getAttribute('href');
                    console.log('Respond button clicked, redirecting to:', href);
                    window.location.href = href;
                };
            });

            // Also handle javascript:void(0) buttons
            document.querySelectorAll('a[href="javascript:void(0)"]').forEach(function (button) {
                var originalOnClick = button.onclick;
                button.onclick = function (e) {
                    e.preventDefault();
                    console.log('JavaScript void button clicked');
                    if (originalOnClick) {
                        originalOnClick.call(this, e);
                    }
                };
            });
        });

        // Additional backup when window is fully loaded
        window.onload = function () {
            console.log('Window fully loaded');
            // No additional actions needed
        };
    </script>
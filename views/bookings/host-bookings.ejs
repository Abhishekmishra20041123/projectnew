<% layout("layouts/boilerplate") %>

    <div class="container my-5">
        <!-- Page Header -->
        <div class="d-flex justify-content-between align-items-center mb-4 pb-3 border-bottom">
            <div>
                <h1 class="fw-bold mb-2">Host Bookings</h1>
                <p class="text-muted mb-0">Manage reservations for your properties</p>
            </div>
            <div class="d-flex gap-2">
                <a href="/profile/dashboard/host" class="btn btn-outline-secondary rounded-3">
                    <i class="bi bi-arrow-left me-2"></i>Back to Dashboard
                </a>
                <a href="/bookings/my-bookings" class="btn btn-outline-primary rounded-3">
                    <i class="bi bi-person me-2"></i>View as Guest
                </a>
            </div>
        </div>

        <!-- Booking Filter Controls -->
        <div class="card border-0 shadow-sm rounded-4 mb-4">
            <div class="card-body p-4">
                <form action="" method="GET" class="row g-3 align-items-end">
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Filter by Status</label>
                        <select class="form-select rounded-3" name="status" id="status">
                            <option value="all" selected>All Bookings</option>
                            <option value="pending">Pending</option>
                            <option value="confirmed">Confirmed</option>
                            <option value="cancelled">Cancelled</option>
                            <option value="completed">Completed</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-semibold">Sort by</label>
                        <select class="form-select rounded-3" name="sort" id="sort">
                            <option value="newest">Newest First</option>
                            <option value="date_asc">Check-in Date (Ascending)</option>
                            <option value="date_desc">Check-in Date (Descending)</option>
                            <option value="price_asc">Price (Low to High)</option>
                            <option value="price_desc">Price (High to Low)</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100 rounded-3">
                            <i class="bi bi-filter me-2"></i>Apply Filters
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <!-- Bookings List -->
        <% if (bookings.length===0) { %>
            <div class="text-center py-5">
                <div class="bg-light rounded-circle mx-auto mb-4 d-flex align-items-center justify-content-center"
                    style="width: 100px; height: 100px;">
                    <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                </div>
                <h4 class="fw-bold text-dark mb-2">No bookings found</h4>
                <p class="text-muted mb-4">You don't have any bookings for your properties yet</p>
                <a href="/listings/new" class="btn btn-primary btn-lg rounded-3">
                    <i class="bi bi-plus me-2"></i>Create a Listing
                </a>
            </div>
            <% } else { %>
                <div class="row g-4">
                    <% bookings.forEach(booking=> { %>
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm rounded-4 h-100 booking-container"
                                data-booking-id="<%= booking._id %>">
                                <div class="card-body p-4">
                                    <!-- Booking Header -->
                                    <div class="d-flex justify-content-between align-items-start mb-3">
                                        <div class="d-flex align-items-center">
                                            <% if (booking.guest.profile && booking.guest.profile.profilePicture) { %>
                                                <img src="<%= booking.guest.profile.profilePicture.url %>" alt="Guest"
                                                    class="rounded-circle" width="50" height="50">
                                                <% } else { %>
                                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center"
                                                        style="width: 50px; height: 50px;">
                                                        <i class="bi bi-person-fill text-white fs-4"></i>
                                                    </div>
                                                    <% } %>
                                                        <div class="ms-3">
                                                            <h6 class="mb-0 fw-semibold">
                                                                <%= booking.guest.username %>
                                                            </h6>
                                                            <small class="text-muted">Guest</small>
                                                        </div>
                                        </div>
                                        <span
                                            class="badge bg-<%= booking.status === 'confirmed' ? 'success' : 
                                                         booking.status === 'pending' ? 'warning booking-status-pending' : 
                                                         booking.status === 'cancelled' ? 'danger' : 'info' %> rounded-pill px-3 py-2">
                                            <i
                                                class="bi bi-<%= booking.status === 'confirmed' ? 'check-circle' : 
                                                      booking.status === 'pending' ? 'clock' : 
                                                      booking.status === 'cancelled' ? 'x-circle' : 'calendar-check' %> me-1"></i>
                                            <%= booking.status.charAt(0).toUpperCase() + booking.status.slice(1) %>
                                        </span>
                                    </div>

                                    <!-- Listing Info -->
                                    <div class="d-flex align-items-center mb-3">
                                        <% if (booking.listing.image && booking.listing.image.length> 0) { %>
                                            <img src="<%= booking.listing.image[0].url %>"
                                                alt="<%= booking.listing.title %>" class="rounded-3" width="80"
                                                height="60" style="object-fit: cover;">
                                            <% } else { %>
                                                <div class="bg-light rounded-3 d-flex align-items-center justify-content-center"
                                                    style="width: 80px; height: 60px;">
                                                    <i class="bi bi-house text-secondary fs-4"></i>
                                                </div>
                                                <% } %>
                                                    <div class="ms-3">
                                                        <h6 class="mb-0 fw-semibold">
                                                            <%= booking.listing.title %>
                                                        </h6>
                                                        <small class="text-muted">
                                                            <i class="bi bi-geo-alt me-1"></i>
                                                            <%= booking.listing.location %>
                                                        </small>
                                                    </div>
                                    </div>

                                    <!-- Booking Details -->
                                    <div class="row g-3 mb-3">
                                        <div class="col-6">
                                            <div class="p-3 bg-light rounded-3">
                                                <small class="d-block text-muted mb-1">Check-in</small>
                                                <div class="fw-semibold">
                                                    <%= new Date(booking.checkIn).toLocaleDateString('en-US',
                                                        {month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="p-3 bg-light rounded-3">
                                                <small class="d-block text-muted mb-1">Check-out</small>
                                                <div class="fw-semibold">
                                                    <%= new Date(booking.checkOut).toLocaleDateString('en-US',
                                                        {month: 'short' , day: 'numeric' , year: 'numeric' }) %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="p-3 bg-light rounded-3">
                                                <small class="d-block text-muted mb-1">Guests</small>
                                                <div class="fw-semibold">
                                                    <%= booking.guests %>
                                                        <%= booking.guests> 1 ? 'people' : 'person' %>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="p-3 bg-light rounded-3">
                                                <small class="d-block text-muted mb-1">Duration</small>
                                                <div class="fw-semibold">
                                                    <%= booking.nights %>
                                                        <%= booking.nights> 1 ? 'nights' : 'night' %>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Price & Actions -->
                                    <div class="d-flex justify-content-between align-items-center border-top pt-3">
                                        <div>
                                            <span class="fs-5 fw-bold text-success">$<%= booking.total %></span>
                                            <span class="text-muted">total</span>
                                        </div>
                                        <div class="d-flex gap-2">
                                            <a href="/bookings/<%= booking._id %>/confirmation"
                                                class="btn btn-outline-primary rounded-3">
                                                <i class="bi bi-info-circle me-1"></i>Details
                                            </a>
                                            <% if (booking.status==='pending' ) { %>
                                                <a href="/bookings/<%= booking._id %>/respond"
                                                    class="btn btn-success rounded-3">
                                                    <i class="bi bi-chat-dots me-1"></i>Respond
                                                </a>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <% } %>
    </div>

    <!-- Include booking response helper -->
    <script>
        // Simple console logging
        document.addEventListener('DOMContentLoaded', function () {
            console.log('Host bookings page loaded');
        });
    </script>

    <style>
        .badge {
            font-weight: 500;
            letter-spacing: 0.5px;
        }

        .card {
            transition: all 0.3s ease;
        }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1) !important;
        }

        .btn {
            transition: all 0.2s ease;
        }

        .btn:hover {
            transform: translateY(-1px);
        }
    </style>
    <style>
      #filters {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 1.2rem;
  padding-top: 1rem;
}


.filter {
  text-align: center;
  opacity: 0.7;
  color: black;
  transition: all 0.2s ease-in-out;
  text-decoration: none;
  margin-right: 10px;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
  color: #ff385c; /* Airbnb pink on hover */
  transform: scale(1.1);
}

.filter p {
  font-size: 0.8rem;
  margin-top: 0.4rem;
}

.filter i {
  font-size: 1.4rem;
  display: block;
}

/* Active Filter Highlight */
.filter.active {
  opacity: 1;
  color: black;
  font-weight: bold;
  border-bottom: 2px solid #ff385c;
  padding-bottom: 0.3rem;
}

/* Toggle section */
.tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: 3rem;
  padding: 1rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

    </style>
   <div class="filter-wrapper" id="filters">
    
    <a href="/listings" class="filter">
  <div><i class="fa-solid fa-globe"></i></div>
  <p>All</p>
</a>

  <a href="/listings?category=Trending" class="filter">
    <div><i class="fa-solid fa-fire"></i></div>
    <p>Trending</p>
  </a>

  <a href="/listings?category=Rooms" class="filter">
    <div><i class="fa-solid fa-bed"></i></div>
    <p>Rooms</p>
  </a>

  <a href="/listings?category=Mountain Cities" class="filter">
    <div><i class="fa-solid fa-mountain-city"></i></div>
    <p>Mountain Cities</p>
  </a>

  <a href="/listings?category=Castles" class="filter">
    <div><i class="fa-brands fa-fort-awesome"></i></div>
    <p>Castles</p>
  </a>

  <a href="/listings?category=Swimming Pools" class="filter">
    <div><i class="fa-solid fa-person-swimming"></i></div>
    <p>Swimming Pools</p>
  </a>

  <a href="/listings?category=Camping Ground" class="filter">
    <div><i class="fa-solid fa-campground"></i></div>
    <p>Camping Ground</p>
  </a>

  <a href="/listings?category=Cow Farms" class="filter">
    <div><i class="fa-solid fa-cow"></i></div>
    <p>Cow Farms</p>
  </a>

  <a href="/listings?category=Bus Side" class="filter">
    <div><i class="fa-solid fa-bus"></i></div>
    <p>Bus Side</p>
  </a>

  <a href="/listings?category=Sea Beaches" class="filter">
    <div><i class="fa-solid fa-umbrella-beach"></i></div>
    <p>Sea Beaches</p>
  </a>

  <a href="/listings?category=Vaccant" class="filter">
    <div><i class="fa-solid fa-door-open"></i></div>
    <p>Vaccant</p>
  </a>

  <a href="/listings?category=Hotel" class="filter">
    <div><i class="fa-solid fa-hotel"></i></div>
    <p>Hotel</p>
  </a>
  <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
      <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
      <label class="form-check-label" for="switchCheckDefault">
        Display Total After Taxes
      </label>
    </div>
  </div>
</div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
         <% for(let list of allist){ %>
    <a href="/listings/<%= list._id %>" class="listing-links">
        <div class="card listing-card" >
  <img src="<%= list.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem;">
  <div class="card-body">
    <p class="card-text">
        <b><%= list.title %></b>
        <br>
        &#8377; <%if (list.price) {%>
  <%=list.price.toLocaleString("en-IN")%>
<%} else {%>
  <%="Date is null"%>
<%}%>/night <i class="tax-info"> +18%@GST</i>
    </p>
  </div>
</div>
    </a>
   <%}%>
